<Window x:Class="LastLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LastLab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox x:Name="NameTbx"  Grid.Row="0" VerticalAlignment="Center" />
        <PasswordBox x:Name="PasswordTbx" Grid.Row="1" VerticalAlignment="Center"/>
        <Button Content="Авторизация" x:Name="Авторизация"  Click="Button_Click_1"  Grid.Row="2"/>
        <Button Content="Гость" x:Name="Гость"  Click="Button_Click_11"  Grid.Row="3"/>
    </Grid>
</Window>
